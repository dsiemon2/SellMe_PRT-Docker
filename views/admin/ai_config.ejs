<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Configuration - Sell Me a Pen Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .toast-container { position: fixed; top: 20px; right: 20px; z-index: 9999; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'ai-config' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <h2 class="mb-4"><i class="bi bi-robot text-primary me-2"></i>AI Configuration</h2>

        <div class="toast-container"></div>

        <form id="aiConfigForm">
          <div class="card mb-4">
            <div class="card-header bg-primary text-white">
              <h5 class="mb-0"><i class="bi bi-terminal me-2"></i>System Prompt</h5>
            </div>
            <div class="card-body">
              <p class="text-muted">This is the main instruction set for the AI. It defines personality, rules, and behavior.</p>
              <textarea class="form-control font-monospace" id="systemPrompt" rows="12"><%= config?.systemPrompt || '' %></textarea>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="card mb-4">
                <div class="card-header bg-info text-white">
                  <h5 class="mb-0">Discovery Phase Prompt</h5>
                </div>
                <div class="card-body">
                  <textarea class="form-control" id="discoveryPrompt" rows="4"><%= config?.discoveryPrompt || '' %></textarea>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                  <h5 class="mb-0">Positioning Phase Prompt</h5>
                </div>
                <div class="card-body">
                  <textarea class="form-control" id="positioningPrompt" rows="4"><%= config?.positioningPrompt || '' %></textarea>
                </div>
              </div>
            </div>
          </div>

          <div class="card mb-4">
            <div class="card-header bg-success text-white">
              <h5 class="mb-0">Closing Phase Prompt</h5>
            </div>
            <div class="card-body">
              <textarea class="form-control" id="closingPrompt" rows="3"><%= config?.closingPrompt || '' %></textarea>
            </div>
          </div>

          <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
              <h5 class="mb-0"><i class="bi bi-sliders me-2"></i>Detection Settings</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-4 mb-3">
                  <label class="form-label">Max Closing Attempts</label>
                  <input type="number" class="form-control" id="maxClosingAttempts" value="<%= appConfig?.maxClosingAttempts || 3 %>">
                  <div class="form-text">How many times AI attempts to close before giving up.</div>
                </div>
                <div class="col-md-4 mb-3">
                  <label class="form-label">Success Keywords (JSON)</label>
                  <textarea class="form-control font-monospace" id="successKeywords" rows="3"><%= appConfig?.successKeywords || '[]' %></textarea>
                  <div class="form-text">Words that indicate a sale was made.</div>
                </div>
                <div class="col-md-4 mb-3">
                  <label class="form-label">Objection Keywords (JSON)</label>
                  <textarea class="form-control font-monospace" id="objectionKeywords" rows="3"><%= appConfig?.objectionKeywords || '[]' %></textarea>
                  <div class="form-text">Words that indicate customer objection.</div>
                </div>
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary btn-lg">
            <i class="bi bi-save me-2"></i>Save AI Configuration
          </button>
        </form>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const token = '<%= token %>';

    function showToast(message, type = 'success') {
      const container = document.querySelector('.toast-container');
      const toast = document.createElement('div');
      toast.className = `toast show align-items-center text-bg-${type} border-0`;
      toast.innerHTML = `<div class="d-flex"><div class="toast-body">${message}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>`;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    document.getElementById('aiConfigForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      try {
        const res = await fetch(`/SellMePRT/admin/ai-config?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            systemPrompt: document.getElementById('systemPrompt').value,
            discoveryPrompt: document.getElementById('discoveryPrompt').value,
            positioningPrompt: document.getElementById('positioningPrompt').value,
            closingPrompt: document.getElementById('closingPrompt').value,
            maxClosingAttempts: document.getElementById('maxClosingAttempts').value,
            successKeywords: document.getElementById('successKeywords').value,
            objectionKeywords: document.getElementById('objectionKeywords').value
          })
        });
        if (res.ok) showToast('AI configuration saved!');
        else showToast('Failed to save', 'danger');
      } catch (err) {
        showToast('Error saving', 'danger');
      }
    });
  </script>
</body>
</html>
