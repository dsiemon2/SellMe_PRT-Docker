<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Session Detail - Sell Me a Pen Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .message-bubble {
      padding: 0.75rem 1rem;
      border-radius: 12px;
      margin-bottom: 0.5rem;
      max-width: 80%;
    }
    .message-bubble.user {
      background: #e3f2fd;
      margin-left: auto;
    }
    .message-bubble.assistant {
      background: #e8f5e9;
    }
    .message-bubble .meta {
      font-size: 0.75rem;
      color: #666;
      margin-top: 0.25rem;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'sessions' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-chat-left-text text-primary me-2"></i>Session Detail</h2>
          <a href="/SellMePRT/admin/sessions?token=<%= token %>" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
          </a>
        </div>

        <div class="row mb-4">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Conversation</h5>
              </div>
              <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                <% session.messages.forEach(msg => { %>
                  <div class="message-bubble <%= msg.role %>">
                    <strong><%= msg.role === 'user' ? 'User' : 'AI Salesperson' %></strong>
                    <div><%= msg.content %></div>
                    <div class="meta">
                      <span class="badge bg-secondary"><%= msg.phase || 'unknown' %></span>
                      <%= new Date(msg.createdAt).toLocaleTimeString() %>
                    </div>
                  </div>
                <% }) %>
                <% if (session.messages.length === 0) { %>
                  <p class="text-muted text-center py-4">No messages in this session.</p>
                <% } %>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="card mb-3">
              <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Session Info</h6>
              </div>
              <div class="card-body">
                <p><strong>ID:</strong> <code><%= session.sessionId %></code></p>
                <p><strong>Started:</strong> <%= new Date(session.startedAt).toLocaleString() %></p>
                <% if (session.endedAt) { %>
                <p><strong>Ended:</strong> <%= new Date(session.endedAt).toLocaleString() %></p>
                <p><strong>Duration:</strong> <%= Math.round((new Date(session.endedAt) - new Date(session.startedAt)) / 1000 / 60) %> minutes</p>
                <% } %>
                <p><strong>Phase:</strong> <span class="badge bg-secondary"><%= session.currentPhase %></span></p>
                <p><strong>Closing Attempts:</strong> <%= session.closingAttempts %></p>
                <p>
                  <strong>Outcome:</strong>
                  <% if (session.outcome === 'sale_made') { %>
                    <span class="badge bg-success">Sale Made</span>
                  <% } else if (session.outcome === 'no_sale') { %>
                    <span class="badge bg-danger">No Sale</span>
                  <% } else if (session.outcome === 'abandoned') { %>
                    <span class="badge bg-warning text-dark">Abandoned</span>
                  <% } else { %>
                    <span class="badge bg-info">In Progress</span>
                  <% } %>
                </p>
              </div>
            </div>

            <% if (session.analytics) { %>
            <div class="card">
              <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>Analytics</h6>
              </div>
              <div class="card-body">
                <p><strong>Total Messages:</strong> <%= session.analytics.totalMessages %></p>
                <p><strong>User Messages:</strong> <%= session.analytics.userMessageCount %></p>
                <p><strong>AI Messages:</strong> <%= session.analytics.aiMessageCount %></p>
                <p><strong>Avg Response Length:</strong> <%= Math.round(session.analytics.avgResponseLength) %> chars</p>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
