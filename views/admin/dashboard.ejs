<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Prairie Rose Trading Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --sidebar-bg: <%= branding?.primaryColor || '#b45309' %>;
    }
    .sidebar { min-height: 100vh; background: var(--sidebar-bg); }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .stat-card { border-radius: 12px; border: none; }
    .stat-card .stat-icon { font-size: 2.5rem; opacity: 0.8; }
    .stat-card .stat-value { font-size: 2rem; font-weight: bold; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'dashboard', branding, basePath }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-speedometer2 text-primary me-2"></i>Dashboard</h2>
          <a href="/" target="_blank" class="btn btn-primary" data-bs-toggle="tooltip" title="Launch the sales training interface">
            <i class="bi bi-play-fill"></i> Open Training App
          </a>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card stat-card bg-primary text-white">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="stat-value"><%= stats.totalSessions %></div>
                  <div>Total Sessions</div>
                </div>
                <i class="bi bi-chat-left-text stat-icon"></i>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stat-card bg-success text-white">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="stat-value"><%= stats.salesMade %></div>
                  <div>Sales Made</div>
                </div>
                <i class="bi bi-trophy stat-icon"></i>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stat-card bg-info text-white">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="stat-value"><%= stats.conversionRate %>%</div>
                  <div>Conversion Rate</div>
                </div>
                <i class="bi bi-percent stat-icon"></i>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stat-card bg-warning text-dark">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="stat-value"><%= Math.round(stats.avgMessages) || 0 %></div>
                  <div>Avg Messages/Sale</div>
                </div>
                <i class="bi bi-chat-dots stat-icon"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3">
                    <a href="/SellMePRT/admin/greeting?token=<%= token %>" class="btn btn-outline-primary w-100 py-3" data-bs-toggle="tooltip" title="Customize the AI welcome message">
                      <i class="bi bi-chat-quote d-block mb-2" style="font-size: 1.5rem;"></i>
                      Edit Greeting
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="/SellMePRT/admin/product?token=<%= token %>" class="btn btn-outline-success w-100 py-3" data-bs-toggle="tooltip" title="Configure pen features, pricing, and benefits">
                      <i class="bi bi-box-seam d-block mb-2" style="font-size: 1.5rem;"></i>
                      Configure Pen
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="/SellMePRT/admin/techniques?token=<%= token %>" class="btn btn-outline-info w-100 py-3" data-bs-toggle="tooltip" title="Enable/disable sales techniques used by AI">
                      <i class="bi bi-lightbulb d-block mb-2" style="font-size: 1.5rem;"></i>
                      Sales Techniques
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="/SellMePRT/admin/analytics?token=<%= token %>" class="btn btn-outline-warning w-100 py-3" data-bs-toggle="tooltip" title="View conversion rates and performance metrics">
                      <i class="bi bi-graph-up d-block mb-2" style="font-size: 1.5rem;"></i>
                      View Analytics
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Sessions -->
        <div class="card">
          <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Sessions</h5>
            <a href="/SellMePRT/admin/sessions?token=<%= token %>" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="View all training sessions">View All</a>
          </div>
          <div class="card-body p-0">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>Session ID</th>
                  <th>Started</th>
                  <th>Phase</th>
                  <th>Outcome</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% sessions.forEach(session => { %>
                <tr>
                  <td><code><%= session.sessionId.substring(0, 8) %>...</code></td>
                  <td><%= new Date(session.startedAt).toLocaleString() %></td>
                  <td>
                    <span class="badge bg-<%= session.currentPhase === 'completed' ? 'success' : 'secondary' %>">
                      <%= session.currentPhase %>
                    </span>
                  </td>
                  <td>
                    <% if (session.outcome === 'sale_made') { %>
                      <span class="badge bg-success"><i class="bi bi-check-circle"></i> Sale Made</span>
                    <% } else if (session.outcome === 'no_sale') { %>
                      <span class="badge bg-danger"><i class="bi bi-x-circle"></i> No Sale</span>
                    <% } else if (session.outcome === 'abandoned') { %>
                      <span class="badge bg-warning text-dark"><i class="bi bi-dash-circle"></i> Abandoned</span>
                    <% } else { %>
                      <span class="badge bg-info"><i class="bi bi-hourglass"></i> In Progress</span>
                    <% } %>
                  </td>
                  <td>
                    <a href="/SellMePRT/admin/sessions/<%= session.sessionId %>?token=<%= token %>"
                       class="btn btn-sm btn-outline-primary"
                       data-bs-toggle="tooltip"
                       title="View session details and conversation">
                      <i class="bi bi-eye"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
                <% if (sessions.length === 0) { %>
                <tr>
                  <td colspan="5" class="text-center text-muted py-4">
                    No sessions yet. Start training to see data here.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
    });
  </script>
</body>
</html>
